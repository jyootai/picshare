<div id="user_edit" class="container">
	<div class="row">
		<div class="col-lg-3" >
			<%= render 'users/shared/vertical_menu'%>
		</div>
		<div class="col-lg-8 ">
			<div class="ui form segment">
			<%= form_for(current_user,:url=>social_users_path,:html=>{:method=>:patch}) do |f|%>	
				<div class="ui header">社交资料</div>
				<p>添加或更改你的其它联系方式</p>
				<div class="field">
					<label>微博</label>
					<%= f.text_field :bio%>
				</div>
				<div class="field">
					<label>QQ</label>
					<%= f.text_field :qq%>
				</div>
				<div class="field">
					<label>微信</label>
					<%= f.text_field :weixin%>
				</div>
				<div class="field">
					<label>Twitter</label>
					<%= f.text_field :twitter%>
				</div>
				<div class="field">
					<label>Facebook</label>
					<%= f.text_field :facebook%>
				</div>
				<div class="field">
					<label>Github用户名</label>
					<%= f.text_field :github%>
				</div>
			<div class="ui section divider "></div>
			<button class="ui button green">提交修改</button>
			<%end%>
			</div>
		</div>
	</div>
	
</div>
