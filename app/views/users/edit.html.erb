<div id="user_edit" class="container">
	<div class="row">
		<div class="col-lg-3" >
			<%= render 'users/shared/vertical_menu'%>
		</div>
		<div class="col-lg-8 ">
			<div class="ui form segment">
				<%= form_for(current_user,:url=>settings_edit_path,:html=>{:multipart=>true,:method=>:patch}) do |f|%>	
				<div class=" ui header">基本资料</div>
				<p>修改你的基本帐号</p>
				<div class="head_area field">
					<%= image_tag current_user.avatar.smaller.url , :class=>"upload_head" %>
					<%= f.file_field :avatar, :class => "avatar"%>
				<br />	<p>你可以上传新的头像从你的电脑上</p>
				</div>
				<div class="field">
					<label>用户名</label>
					<%= f.text_field :username%>
				</div>
				<div class="field">
					<label>电子邮箱</label>
					<%= f.email_field :email%>
				</div>
			</div>
			<div class="ui section divider "></div>
			<button type="submit" class="ui button green" tabindex="5">提交修改</button>
			<%end%>
		</div>
	</div>
	
</div>
