<div class="root_photo">
  <div id="main" class="container">
		<div class="row">
			<div class="col-lg-8 col-lg-push-2"> 
  	<% if user_signed_in? %>
		<%else%>
				<h1  class="blog-title">
					Share your photos
				</h1>
				<h2 class="blog-desc">
					Picshare is a simple,powerful sharing platform that allows you to share your photos with everyone.
			  </h2>
			</div>
		</div>
	</div>
	<div class="container">
		<div class="row">
			<div class="col-lg-8 col-lg-push-2">
			  <div class="ui form segment">
        	<%= form_for resource, :wrapper => :semantic_ui_no_label,as: resource_info,url: registration_path(resource_info),  :html => {:class => "root_registration"} do |f| %>
			   	<div class="inline fields">
				    <div class="field">
				    	<div class="ui left labeled icon input">
								<%= f.text_field :username, :required => true,:placeholder => "用户名",  "data-content" =>  "用户名: 允许字母, 数字和下划线 3～20个字符", :tabindex => 1 %>
	    					<i class="user icon"></i>
       			  </div>
						</div>
						<div class="field">
							<div class="ui left labeled icon input">
	    					<%= f.text_field :email, :required => true, :placeholder => "邮箱","data-content"=> "邮箱: 用来找回密码 / 接收通知", :tabindex => 2 %>
								<i class="mail icon"></i>
	  					</div>
						</div>
						<div class="field">
							<div class="ui left labeled icon input">
								<%= f.password_field :password, :required => true, :placeholder => "密码","data-content"=> "密码: 8个以上的字符", :tabindex => 3 %>
								<i class="lock icon"></i>
	  					</div>
						</div>
					<button type="submit" class="ui button green" tabindex="5">注 册</button>
					<% end%>
					<%end%>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<div id="myModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button  class="close" type="submit" data-dismiss="modal" aria-hidden="true">× </button>
		
				<h2>登 录</h2>
			</div>
			<div class="modal-body">
				<div class="ui form segment">
				<%= form_for(resource, as: resource_info, url: session_path(resource_info)) do |f| %>
					<div class="field">
	  				<label >邮 箱</label>
						<div class="ui left labeled icon input">	
							<%= f.email_field :email,:placeholder=>"在这里输入邮箱", autofocus: true %>
							<i class="mail icon"></i>
						</div>
					</div>
					<div class="field">
			  		<label >密 码</label>
						<div class="ui left labeled icon input">
							<%= f.password_field :password, :placeholder=>"在这里输入你的密码",autocomplete: "off" %>
							<i class="lock icon"></i>
						</div>
					</div>
					<% if devise_mapping.rememberable? -%>
						<div><%= f.check_box :remember_me %> <label>记住我</label></div>
					<% end -%>
					<button type="submit" class="ui button blue " >登录</button>
					<% end %>
				</div>
  <p>还不是Picshare的用户吗？<%= link_to "注册",root_path%>成为我们的成员！ <br />
		忘记密码了？没关系，点击<%= link_to "找回密码", new_password_path(resource_info) %>。
	</p>
			</div>
		</div>
	</div>
</div>
