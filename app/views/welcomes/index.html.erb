<div class="root_photo">
  <div id="main" class="container">
		<div class="row">
			<div class="col-lg-8 col-lg-push-2"> 
  	<% if user_signed_in? %>
	    	<i class="icon plus"></i><span>上传照片</span>
		<%else%>
				<h1  class="blog-title">
					Share your photos
				</h1>
				<h2 class="blog-desc">
					Picshare is a simple,powerful sharing platform that allows you to share your photos with everyone.
			  </h2>
			</div>
		</div>
	</div>
	<div class="container">
		<div class="row">
			<div class="col-lg-8 col-lg-push-2">
			  <div class="ui form segment">
        	<%= form_for resource, :wrapper => :semantic_ui_no_label,as: resource_info,url: registration_path(resource_info),  :html => {:class => "root_registration"} do |f| %>
			   	<div class="inline fields">
				    <div class="field">
				    	<div class="ui left labeled icon input">
	    					<%= f.text_field :username, :required => true, :placeholder => "用户名", :input_html => { :class => "popup", "data-content"=> "用户名: 允许字母, 数字和下划线 3～20个字符", :tabindex => 1} %>
	    					<i class="user icon"></i>
       			  </div>
						</div>
						<div class="field">
							<div class="ui left labeled icon input">
	    					<%= f.text_field :email, :required => true, :placeholder => "邮箱", :input_html => { :class => "popup", "data-content"=> "邮箱: 用来找回密码 / 接收通知", :tabindex => 2} %>
								<i class="mail icon"></i>
	  					</div>
						</div>
						<div class="field">
							<div class="ui left labeled icon input">
								<%= f.password_field :password, :required => true, :placeholder => "密码", :input_html => { :class => "popup", "data-content"=> "密码: 8个以上的字符", :tabindex => 3} %>
								<i class="lock icon"></i>
	  					</div>
						</div>
					<button type="submit" class="ui button green" tabindex="5">注 册</button>
					<% end%>
					<%end%>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
