<div class=" photo_detail">
	<% @photos.each do |photo|%>
	<div class="each_photo">
		<div class="ui items">
			<div class="item">
				<div class="image">
					<%=link_to image_tag(photo.image.thumb.url),"#","data-target"=>"##{photo.id}",:class=>"preview","data-toggle"=>"modal" %>
			   	<div class="ui simple  dropdown item corner label">
					 	<i class="edit icon"></i>
					 	<div class="menu">
						 <%= link_to "编辑照片",'#',:class=>"item"%>
						 <%= link_to "删除照片",photo_path(photo),:method=> :delete,:class=>"item","data-confirm" => "确认永久删除此照片?"%>
					 	
					 	</div>
					</div>
					<div class="extra">
						<div class="caption">
							<%= photo.image %>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div id="<%=photo.id %>"  class="modal fade photo-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
			<div class="pswrapper container">
				<div class="row">
					<div class="large-image col-lg-9 ">
						<%=image_tag(photo.image.large.url)%>
					</div>
					<div class="image-info col-lg-3">
						<div class="modal-header">
							<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
							<div class="uploaderhead">
								<%=image_tag photo.user.avatar.smallist.url, :class=>"avatar"%>
							</div>
							<div class="photouploadername">
								<%=link_to photo.user.name,user_home_path, :class=>"name"%>
							</div>
							<div class="uploadertime">
								<p>上传时间：<%= photo.created_at.strftime("%Y年%m月%d日")%></p>
								
							</div>
							<div class="isedit">
								<% if photo.created_at == photo.updated_at%>
									<p>未编辑</p>
								<% else %>
									<p>已编辑</p>
								<%end%>
							</div>
						</div>
						<div class="modal-body">
							<div class="uploadertitle">
							  <%=photo.title unless photo.title.blank? %>
					 	  </div>
							<div class="uploaderdescription">
								<%=photo.description unless photo.description.blank? %>
							</div>

						</div>

				
					</div>
				</div>
			</div>

		</div>
	</div>
	<%end%>
</div>
