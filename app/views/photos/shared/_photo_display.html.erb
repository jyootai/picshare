<div class=" photo_detail">
	<% @photos.each do |photo|%>
	<div class="each_photo">
		<div class="ui items">
			<div class="item">
				<div class="image">
					<%=link_to image_tag(photo.image.thumb.url),photo_path(photo),"data-target"=>"#myModal",:class=>"preview","data-toggle"=>"modal" %>
					<%#<%=link_to image_tag(photo.image.thumb.url),photo.image.large.url,"data-lightbox"=>"image"  , :class=>"preview" %>
			   	<div class="ui simple  dropdown item corner label">
					 	<i class="edit icon"></i>
					 	<div class="menu">
						 <%= link_to "编辑照片",'#',:class=>"item"%>
						 <%= link_to "删除照片",photo_path(photo),:method=> :delete,:class=>"item","data-confirm" => "确认永久删除此照片?"%>
					 	
					 	</div>
					</div>
					<div class="extra">
						<div class="caption">
							<%= photo.image %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<%end%>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="photo-modal">
	</div>
</div>
