<div class=" photo_detail">
	<% @photos.each do |photo|%>
	<div class="each_photo">
		<div class="ui items">
			<div class="item">
				<div class="image">
					<%=link_to image_tag(photo.image.thumb.url),photo_path(photo),"data-target"=>"#photoModal",:class=>"preview","data-toggle"=>"modal" %>
					<%#<%=link_to image_tag(photo.image.thumb.url),photo.image.large.url,"data-lightbox"=>"image"  , :class=>"preview" %>
			   	<div class="ui simple  dropdown item corner label">
					 	<i class="edit icon"></i>
					 	<div class="menu">
							<%= link_to "编辑照片","##{photo.id}","data-target"=>"##{photo.id}",:class=>"item","data-toggle"=>"modal"%>
						 <%= link_to "删除照片",photo_path(photo),:method=> :delete,:class=>"item","data-confirm" => "确认永久删除此照片?"%>
					 	
					 	</div>
					</div>
					<div class="extra">
						<div class="caption">
							<%= photo.title %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="modal fade editphotomodal" id="<%=photo.id%>" tabindex="-1" role="dialog" aria-labelledby="mymodallabel" aria-hidden="true">
	<div class="modal-page editphotomodal">
		<div class="modal-content">
			<div class="modal-header">
				<button  class="close" type="submit" data-dismiss="modal" aria-hidden="true">× </button>
				<h3>编辑照片信息</h3>
			</div>
			<div class="modal-body">
				<div class="ui form ">
					<%= form_for photo, :url=> photo_path(photo),method: :patch  do |f| %>
					<div class="field">
	  				<label >标题</label>
						<div class="ui labeled input">	
							<%= f.text_field :title,:placeholder=>"在这里输入照片的标题", autofocus: true %>
						</div>
					</div>
					<div class="field">
			  		<label >描述</label>
						<div class="ui labeled input">
							<%= f.text_field :description, :placeholder=>"在这里输入你的对照片的描述",autocomplete: "off" %>
						</div>
					</div>
					<button type="submit" class="ui button blue " >保存</button>
					<% end %>
				</div>
			</div>
			
		</div>
	</div>
</div>
	<%end%>
</div>
<div class="modal fade" id="photoModal" tabindex="-1" role="dialog" aria-labelledby="mymodallabel" aria-hidden="true">
	<div class="photo-modal">
		<div class="modal-dialog">
			
		</div>
	</div>
</div>
